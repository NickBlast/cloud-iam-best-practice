# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# PowerShell files
[*.ps1]
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

# CSV files
[*.csv]
charset = utf-8-bom

# Text files
[*.txt]
charset = utf-8

# Configuration files
[*.config]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2
